<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="p3r5uazn.krypto.DetailsPage"
    android:background="@color/main_background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TableRow
            android:layout_width="305dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="30dp"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/cost"
                android:layout_width="274dp"
                android:layout_height="40dp"
                android:text="TextView"
                android:textColor="@color/text"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/change1"
                android:layout_width="73dp"
                android:layout_height="40dp"
                android:text="TextView"
                android:textColor="@color/text"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="30dp"
                android:textColor="@color/text"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="252dp">

        <TableRow>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_width="185dp"
                android:layout_height="252dp"
                android:layout_x="120px"
                android:layout_y="30px" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph2"
                android:layout_width="204dp"
                android:layout_height="252dp"
                android:layout_x="120px"
                android:layout_y="30px" />


        </TableRow>
    </TableLayout>





    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:text="BTC Price"
                android:textColor="@color/colorAccent" />


            <TextView
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:text="Volume 24Hr"
                android:textColor="@color/colorAccent" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/btc"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/text"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/text"
                android:textSize="20dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:text="Change in 24Hr %"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:text="Change in 7D %"
                android:textColor="@color/colorAccent" />


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/change24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/text"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/change7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/text"
                android:textSize="20dp" />


        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Market Cap"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Supply"
                android:textColor="@color/colorAccent" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/cap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/text"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/text"
                android:textSize="20dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Supply"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Max Supply"
                android:textColor="@color/colorAccent" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20dp"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20dp"
                android:textColor="@color/text"/>
        </TableRow>

    </TableLayout>
    

</LinearLayout>
