<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/krypto_logo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:srcCompat="@drawable/krypto_white" android:contentDescription="TODO" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Switch
            android:id="@+id/notification_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/colorAccent"
            android:splitTrack="false"
            android:textColor="@color/text"
            android:track="@android:color/holo_orange_light"
            tools:checked="false" />

        <TextView
            android:id="@+id/notification_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Push Notification is off"
            android:textAlignment="center"
            android:textColor="@color/text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:gravity="start">

        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/main_background"
            app:srcCompat="@android:drawable/ic_menu_add" />

        <AutoCompleteTextView
            android:id="@+id/settings_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionHint="Search . . ."
            android:completionThreshold="1"
            android:textColor="@color/text" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/threshold_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Threshold"
            android:textAlignment="center"
            android:textColor="@color/text" />
    </TableRow>

    <ListView
        android:id="@+id/favorites_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/divider"
        android:dividerHeight="2.0sp" />

</LinearLayout>